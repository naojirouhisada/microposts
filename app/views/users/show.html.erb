
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts(<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      Name: <%= @user.name %>
      <br>
      Area: <%= @user.area %>
      
      
      <% if @user == current_user %>
      <%= link_to "edit profile", edit_user_path(current_user) , class: "btn  btn-primary btn-large btn-block" %>

      <% end %>
      

    <% end %>
  </div>
</div>




    