<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      Name: <%= @user.name %>
      <br>
      Area: <%= @user.area %>
      
      
      <% if @user == current_user %>
      <%= link_to "edit profile", edit_user_path(current_user) , class: "btn  btn-primary btn-large btn-block" %>

      <% end %>
      
    <% end %>
  </div>
</div>

