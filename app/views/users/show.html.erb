
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      
        <%= image_tag(@user.avatar) %>
        <h1><%= @user.name %></h1>
     

    </section>
    <section class="user_profile">
     <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      Name: <%= @user.name %>
      <br>
      Area: <%= @user.area %>
      
      
      <% if @user == current_user %><br />
      <%= link_to "Edit Profile", edit_user_path(current_user) , class: "btn  btn-primary btn-block" %>

      <% end %>

      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <!-- タブ・メニュー -->
    <ul class="nav nav-pills">
	    <li class="active"><a href="#Tweet" data-toggle="tab">Tweet</a></li>
    	<li><a href="#Favorite" data-toggle="tab">Favorite</a></li>
    </ul>
    <!-- ここまでがタブ・メニュー -->

    <!-- タブ内容 -->
    <div class="tab-content">
      <!-- ツイートのコンテンツ部分 -->
    	<div class="tab-pane active" id="Tweet">
    	  <%= render 'follow_form' if logged_in? %>
          <% if @user.microposts.any? %>
            <h3>Microposts(<%= @user.microposts.count %>)</h3>
            <ol class="microposts">
            <%= render @microposts %>
            <%= paginate @microposts %>
            </ol>
          <% end %>
      </div>
      <!-- ここまでがツイートのコンテンツ部分 -->
      
      <!-- お気に入りのコンテンツ部分 -->
	    <div class="tab-pane" id="Favorite">
	      <h3>Favorites(<%= @user.favorited_microposts.count %>)</h3>
	      <hr>
	       <%  @user.favorited_microposts.each do |micropost| %>
          <%= image_tag(micropost.user.avatar) %>
          <%= micropost.content %>
        <hr>
        <% end %>
	    </div>
	    <!-- ここまでがお気に入りのコンテンツ部分 -->
    </div>
    <!-- ここまでがタブ内容 -->
    
  </div>
</div>