
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= image_tag(@user.avatar) %>
        <%= @user.name %>
      </h1>
    </section>
    <section class="user_profile">
     <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %> <!-- ここを追加 -->

      Name: <%= @user.name %>
      <br>
      Area: <%= @user.area %>
      
      
      <% if @user == current_user %><br />
      <%= link_to "Edit Profile", edit_user_path(current_user) , class: "btn  btn-primary btn-block" %>

      <% end %>

      <% end %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts(<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
        <%= paginate @microposts %>
      </ol>
    <% end %>
  </div>
</div>



 
    
     